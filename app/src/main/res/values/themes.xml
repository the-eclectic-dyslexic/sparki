<resources>
    <!-- Base application theme. -->
    <style name="Theme.BatteryChargeAssistant" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="colorSecondary">@color/purple_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
    </style>

    <style name="Theme.BatteryChargeAssistant.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.BatteryChargeAssistant.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.BatteryChargeAssistant.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.BatteryChargeAssistant.Editor" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/normal_padding</item>
        <item name="android:inputType">text</item>
        <item name="backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:textColorHint">?attr/colorAccent</item>
    </style>

    <style name="Theme.BatteryChargeAssistant.SSIDEditor" parent="Theme.BatteryChargeAssistant.Editor">
        <item name="android:hint">@string/ssid_hint</item>
    </style>

    <style name="Theme.BatteryChargeAssistant.URLEditor" parent="Theme.BatteryChargeAssistant.Editor">
        <item name="android:hint">@string/http_hint</item>
    </style>

    <style name="Theme.BatteryChargeAssistant.EditorContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Theme.BatteryChargeAssistant.RemoveRowButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/normal_padding</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:tint">?attr/colorPrimary</item>
        <item name="android:src">@android:drawable/ic_delete</item>
        <item name="android:contextDescription">@string/remove_row_button</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="Theme.BatteryChargeAssistant.TableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>